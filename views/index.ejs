<% include ./partials/header %>
<div class="container">    
    <header>
        <h1>Reciepe DashBoard</h1>
        <hr>
        <br>
        <a class="btn btn-primary" href="/reciepes/new">Add New Reciepe</a>
    </header>

    <div class="row text-center">
        <% reciepes.forEach(function(reciepe){ %>    
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="/uploads/<%= reciepe.image %>" alt="">
                    <div class="caption">
                        <h4><a href="/reciepes/<%= reciepe._id %>"><%= reciepe.title %></a></h4>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>    
</div>
<% include ./partials/footer %>