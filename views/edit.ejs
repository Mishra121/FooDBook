<% include ./partials/header %>

    <div class="container">
        <div class="row">
            <h1 class="text-center">Edit <%= recipe.title %></h1>
            <hr>
            <div style="width: 37%; margin: 0 auto;">
                <form action="/recipes/<%= recipe.id %>?_method=PUT" method="POST" enctype='multipart/form-data'>
                    <div class="form-group">
                        <label>Name:</label>
                        <input type="text" class="form-control" name="title" value="<%= recipe.title %>">
                    </div>
                    <div class="form-group">
                        <label>Description:</label>
                        <textarea class="form-control" name="description" cols="25" rows="8"><%= recipe.description %></textarea>
                    </div>
                    <button class="btn btn-lg btn-block btn-warning" type="submit">Submit <i class="glyphicon glyphicon-saved"></i></button>
                </form>
            </div>
        </div>
    </div>

<% include ./partials/footer %>